{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Activate-Conda-Environment",
            "type": "shell",
            "command": "conda activate base",
            "problemMatcher": [],
            "windows": {
                "command": "conda activate base && cmd.exe /c"
            },
            "osx": {
                "command": "conda init --all && conda activate base"
            },
            "linux": {
                "command": "source activate base"
            }
        }
    ]
}
